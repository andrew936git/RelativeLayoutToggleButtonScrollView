<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textHeadTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/headText"
        android:textSize="@dimen/_36sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/toggleButtonTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textOn"
        android:textSize="@dimen/_24sp"
        android:onClick="onClick"
        android:backgroundTint="@color/Green"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textHeadTV"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toggleButtonTB">

    <TextView
        android:id="@+id/textBookTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/_24sp" />

</ScrollView>

</RelativeLayout>